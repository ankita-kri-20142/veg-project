<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo at top center -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_minute_bazar"
            android:contentDescription="Minute Bazar Logo" />

        <!-- Green Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/minute_bazar_green"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logo_minute_bazar"
                android:contentDescription="Minute Bazar Logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Great deals\non your first purchase"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingStart="16dp" />
        </LinearLayout>

        <!-- Close button top right -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />

        <!-- Header -->
        <TextView
            android:id="@+id/tvLoginSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login or Signup"
            android:textStyle="bold"
            android:textColor="@color/minute_bazar_text"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Name input -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your Name"
            android:background="@drawable/edit_text_bg"
            android:paddingLeft="12dp"
            android:textColor="@color/minute_bazar_text"
            android:textColorHint="@color/minute_bazar_hint"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:inputType="textPersonName" />

        <!-- Phone number input -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your Phone number"
            android:background="@drawable/edit_text_bg"
            android:paddingLeft="12dp"
            android:textColor="@color/minute_bazar_text"
            android:textColorHint="@color/minute_bazar_hint"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:inputType="phone" />

        <!-- Terms checkbox -->
        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to Minute Bazarâ€™s privacy and policy"
            android:textColor="@color/minute_bazar_text"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Login OTP button -->
        <Button
            android:id="@+id/btnLoginOtp"
            style="@style/Widget.MinuteBazarApp.ButtonRound"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login using OTP"
            android:layout_marginBottom="16dp" />

        <!-- Help text -->
        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Having trouble logging in? Get help"
            android:textColor="@color/minute_bazar_hint"
            android:gravity="center"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
